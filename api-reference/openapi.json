swagger: '2.0'
info:
  title: Order API
  version: 1.0.0
  description: API for creating orders

schemes:
  - https
paths:
  /api/v1/order:
    post:
      summary: Create a new order
      operationId: createOrder
      consumes:
        - application/json
      produces:
        - application/json
      parameters:
        - in: body
          name: body
          description: Order object that needs to be added
          required: true
          schema:
            type: object
            properties:
              marketId:
                type: integer
              isBuy:
                type: boolean
              orderType:
                type: string
              amount:
                type: string
              price:
                type: string
              expiryTs:
                type: integer
              isReduce:
                type: boolean
      responses:
        200:
          description: Order created successfully
          schema:
            type: object
            properties:
              body:
                type: object
                properties:
                  amountx18:
                    type: string
                    example: "1545000000000000"
                  brokerId:
                    type: integer
                    example: 1
                  createdAt:
                    type: string
                    example: "2024-08-05T18:30:13.958883Z"
                  expiryTs:
                    type: integer
                    example: 1725474613514
                  id:
                    type: integer
                    example: 1936536
                  marketSymbol:
                    type: string
                    example: "BTC-USD"
                  marketType:
                    type: string
                    example: "PERPETUAL"
                  pricex18:
                    type: string
                    example: "0"
                  side:
                    type: string
                    example: "SELL"
                  status:
                    type: string
                    example: "FILLED"
                  subaccountId:
                    type: string
                    example: "1_0x671d45818b7661313A497eb3ED017A70424d9EF3_1"
                  totalFilledx18:
                    type: string
                    example: "1545000000000000"
                  type:
                    type: string
                    example: "MARKET"
                  updatedAt:
                    type: string
                    example: "2024-08-05T18:30:15.10566586Z"
              message:
                type: string
                example: "Order created successfully"
              status:
                type: integer
                example: 200

host: gateway-vraqb64neq-uc.a.run.app
x-google-backend:
  address: https://logx-inf-backend-vraqb64neq-uc.a.run.app
  protocol: h2