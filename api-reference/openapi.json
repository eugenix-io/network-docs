{
  "openapi": "3.0.1",
  "info": {
    "title": "Order API",
    "description": "API for managing orders in the trading system.",
    "version": "1.0.0",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "https://logx-inf-backend-vraqb64neq-uc.a.run.app"
    }
  ],
  "paths": {
    "/order": {
      "post": {
        "summary": "Create a new order",
        "description": "Creates a new order in the trading system.",
        "parameters": [
          {
            "name": "Logx-Key",
            "in": "header",
            "description": "API key for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Logx-Secret",
            "in": "header",
            "description": "API secret for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Logx-Signature",
            "in": "header",
            "description": "Signature for verifying the request",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Logx-Signer-Address",
            "in": "header",
            "description": "Public key of the signer",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Order details to create",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Order"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Cancel a limit order",
        "description": "Cancels a limit order in the trading system.",
        "parameters": [
          {
            "name": "Logx-Key",
            "in": "header",
            "description": "API key for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Logx-Secret",
            "in": "header",
            "description": "API secret for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "orderId",
            "in": "query",
            "description": "ID of the order to cancel",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Order canceled successfully"
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "required": [
          "marketId",
          "isBuy",
          "orderType",
          "amount",
          "price",
          "expiryTs",
          "isReduce"
        ],
        "properties": {
          "marketId": {
            "type": "string",
            "description": "Identifier for the market"
          },
          "isBuy": {
            "type": "boolean",
            "description": "True if the order is a buy order"
          },
          "orderType": {
            "type": "string",
            "description": "Type of the order (e.g., limit, market)"
          },
          "amount": {
            "type": "string",
            "description": "Amount of the asset to trade"
          },
          "price": {
            "type": "string",
            "description": "Price of the asset"
          },
          "expiryTs": {
            "type": "integer",
            "description": "Expiration timestamp in milliseconds"
          },
          "isReduce": {
            "type": "boolean",
            "description": "True if the order is to reduce position"
          }
        }
      },
      "OrderResponse": {
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "description": "Unique identifier for the order"
          },
          "status": {
            "type": "string",
            "description": "Status of the order"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
